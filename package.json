{
  "name": "s-githooks",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@7.12.0",
  "description": "provides a configurable hooks",
  "author": "Songwuk <1017301325@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/songwuk/s-githooks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/songwuk/s-githooks.git"
  },
  "bugs": "https://github.com/songwuk/s-githooks/issues",
  "keywords": [
    "githooks",
    "lint",
    "steps"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs"
    }
  },
  "main": "./lib/index.mjs",
  "module": "./lib/index.mjs",
  "bin": "./lib/bin.mjs",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=13.2.0"
  },
  "scripts": {
    "postinstall": "node lib/bin.mjs",
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "verifycommit": "esno src/verifyCommit.ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.27.0",
    "@antfu/ni": "^0.18.0",
    "@antfu/utils": "^0.5.2",
    "@types/node": "^18.7.18",
    "bumpp": "^8.2.1",
    "chalk": "^5.2.0",
    "eslint": "^8.24.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.1.0",
    "pnpm": "^7.12.0",
    "rimraf": "^3.0.2",
    "s-githooks": "file:.",
    "typescript": "^4.8.3",
    "unbuild": "^0.8.11",
    "vite": "^3.1.2",
    "vitest": "^0.23.4"
  },
  "s-githooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npm run verifycommit"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
